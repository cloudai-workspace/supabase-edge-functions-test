{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Supabase Function (Deno)",
			"type": "shell",
			"command": "C:\\Users\\Watchara\\.deno\\bin\\deno.exe",
			"args": [
				"run",
				"--allow-net",
				"--allow-env",
				"--allow-read",
				"${workspaceFolder}/supabase/functions/hello/index.ts"
			],
			"options": {
				"cwd": "${workspaceFolder}/supabase/functions/hello"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Test Local Function",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"try { (Invoke-WebRequest -Uri 'http://localhost:8000' -UseBasicParsing).Content } catch { Write-Error $_ }"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Stop Supabase Function",
			"type": "shell",
			"command": "echo",
			"args": ["Function stopped - close the terminal manually"],
			"group": "build"
		},
		{
			"label": "Deploy Supabase Function",
			"type": "shell",
			"command": "npx",
			"args": [
				"supabase",
				"functions",
				"deploy",
				"hello"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Test Local Function",
			"type": "shell",
			"command": "curl",
			"args": [
				"http://localhost:8000"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		}
	]
}